---
// src/components/Footer.astro
const today = new Date();
const currentYear = today.getFullYear();

// Define footer links - makes it easier to manage
const socialLinks = [
  { name: 'Instagram', url: 'https://www.instagram.com/brain_muffins', icon: 'instagram' },
];

const navLinks = [
  { name: 'Home', url: '/', icon: 'home' },
  { name: 'Blog', url: '/blog', icon: 'blog' }, // Assuming /blog is the correct path
  { name: 'About', url: '/about', icon: 'about' }, // Assuming /about is the correct path
];

const coalbanksLinks = [
  { name: 'coalbanks.com', url: 'https://coalbanks.com', description: 'Crafting compelling brand stories through cinematic documentary-style video production.' },
  { name: 'lethbridgedrone.com', url: 'https://lethbridgedrone.com', description: 'Elevate your perspective with professional drone videography and photography services.' },
  { name: 'michaelwarf.com', url: 'https://michaelwarf.com', description: 'Insights on AI, video production, documentary storytelling, and building a creative legacy at the intersection of creativity, technology, and strategy.' },
];

// NOTE: Icons below are basic SVG placeholders.
// You might need to replace these with your actual SVG icons or use an icon library.
---

<footer class="text-gray-300 py-12 px-4 sm:px-6 lg:px-8 bg-neutral-950">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Column 1: brainmuffin.ca -->
      <div>
        <img src="/bm-logo-horizontal-reverse.png" alt="BrainMuffin Logo" class="h-8 mb-4" /> {/* Adjust height (h-8) as needed */}
        <p class="text-sm mb-4">
          Your AI-powered creative partner. BrainMuffin integrates cutting-edge AI and VFX to unlock new possibilities in digital content creation.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors" aria-label={link.name}>
              <span class="sr-only">{link.name}</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                {/* Basic Placeholder Icons - Replace with actual SVGs */}
                {link.icon === 'linkedin' && <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>}
                {link.icon === 'instagram' && <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.07 1.646.07 4.85s-.012 3.584-.07 4.85c-.148 3.227-1.667 4.77-4.919 4.919-1.266.058-1.646.07-4.85.07s-3.584-.012-4.85-.07c-3.252-.148-4.771-1.691-4.919-4.919-.058-1.265-.07-1.646-.07-4.85s.012-3.584.07-4.85c.148-3.227 1.669-4.77 4.919-4.919 1.266-.058 1.646-.07 4.85-.07zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.359 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072s3.667-.014 4.947-.072c4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.947s-.014-3.667-.072-4.947c-.196-4.354-2.617-6.78-6.979-6.98-1.28-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.791-4-4s1.791-4 4-4 4 1.791 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>}
